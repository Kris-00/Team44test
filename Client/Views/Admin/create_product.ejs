<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head.ejs') %>

<body>
  <!--start wrapper-->
  <div class="wrapper">
    <!--start top header-->
    <%- include('../partials/_navbar.ejs') %>
    <!--end top header-->

    <!--start sidebar -->
    <%- include('../partials/_sidebar.ejs') %>
    <!--end sidebar -->

    <!--start content-->
    <main class="page-content">
      <!--breadcrumb-->
      <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">eCommerce</div>
        <div class="ps-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
              <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">Add New Product</li>
            </ol>
          </nav>
        </div>
      </div>
      <!--end breadcrumb-->

      <div class="row">
        <div class="col-lg-12 mx-auto">
          <div class="card">
            <div class="card-header py-3 bg-transparent">
              <div class="d-sm-flex align-items-center">
                <h5 class="mb-2 mb-sm-0">Add New Product</h5>

              </div>
            </div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-12 col-lg-8">
                  <div class="card shadow-none bg-light border">
                    <div class="card-body">


                      <!--------- START OF FORM --------------------------------->
                      <form class="row g-3" id="uploadForm" action="/admin/createProduct" method="post" enctype="multipart/form-data">
                        <div class="col-12">
                          <label class="form-label">Product Name</label>
                          <input type="text" class="form-control" name="name" placeholder="Product Name">
                        </div>

                        <div class="col-12">
                          <label class="form-label">Product Code</label>
                          <input type="text" class="form-control" name="product_code" placeholder="Product Code">
                        </div>

                        <div class="col-12">
                          <!-- <form id="uploadForm" enctype="multipart/form-data">
                                                        <label class="form-label" for="image_url">Images</label>
                                                        <input id="image_url" class="form-control" type="file"
                                                            accept="image/*"> -->
                          <input type="file" name="upload">

                        </div>
                        <div class="col-12">
                          <label class="form-label">Full description</label>
                          <textarea class="form-control" name="description" placeholder="Full description" rows="4" cols="4"></textarea>
                        </div>

                    </div>
                  </div>
                </div>

                <div class="col-12 col-lg-4">
                  <div class="card shadow-none bg-light border">
                    <div class="card-body">
                      <div class="row g-3">
                        <div class="col-12">
                          <label class="form-label">Price</label>
                          <input type="text" name="price" class="form-control" placeholder="Price">
                        </div>
                        <div class="col-12">
                          <label class="form-label">Stock</label>
                          <input id="stockNo" name="stock" type="number" min="0" class="form-control" placeholder="Stock Amount">
                        </div>
                        <div class="col-12">
                          <h5>Categories</h5>
                          <div class="category-list" id="cats" name="cats">
                            <% for(let i=0; i<cat_list.length; i++) { %>
                            <div class="form-check">
                              <input type="radio" class="form-check-input" name="category" id="cat<%=i%>" value="<%=cat_list[i].name%>">
                              <label class="form-check-label" for="cat<%=i%>"><%=cat_list[i].name%></label>
                            </div>
                            <% } %>
                          </div>
                        </div>

                      </div>

                    </div>
                    <!--end row-->
                  </div>
                </div>
              </div>
              <div class="ms-auto">
                <button id="OnClickCreate" type="submit" class="btn btn-primary">Submit</button>
              </div>
              <!-- <button type="submit" class="btn btn-danger">Submit</button> -->
            </div>
            <!--end row-->
          </div>
        </div>
      </div>
  </div>
  </form>
  <!----------- END OF FORM ----------------------------------->
  <!--end row-->

  </main>
  <!--end page main-->


  <!--start overlay-->
  <div class="overlay nav-toggle-icon"></div>
  <!--end overlay-->

  <!--Start Back To Top Button-->
  <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
  <!--End Back To Top Button-->

  </div>
  <!--end wrapper-->


  <!-- Bootstrap bundle JS -->
  <script src="../../assets/js/bootstrap.bundle.min.js"></script>
  <!--plugins-->
  <script src="../../assets/js/jquery.min.js"></script>
  <script src="../../assets/plugins/simplebar/js/simplebar.min.js"></script>
  <script src="../../assets/plugins/metismenu/js/metisMenu.min.js"></script>
  <script src="../../assets/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
  <script src="../../assets/js/pace.min.js"></script>
  <!--app-->
  <script src="../../assets/js/app.js"></script>
  <script type="module" src="../../assets/js/module/product/create_product.js"></script>
</body>

</html>